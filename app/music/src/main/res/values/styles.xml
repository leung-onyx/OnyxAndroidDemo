<resources>
	<style name="MusicHomeTitleTextStyle">
        <item name="android:textSize">@dimen/home_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
	</style>
	<style name="MusicListSubTitleStyle" parent="MusicHomeTitleTextStyle">
        <item name="android:textSize">@dimen/list_sub_title_text_size</item>
	</style>
	<style name="MusicLPreviousButtonStyle" parent="@android:style/MediaButton.Previous">
        <item name="android:src">@drawable/ic_music_last</item>
	</style>
	<style name="MusicPlayButtonStyle" parent="@android:style/MediaButton.Play">
        <item name="android:src">@drawable/ic_music_cd_play</item>
	</style>
	<style name="MusicNextButtonStyle" parent="@android:style/MediaButton.Next">
        <item name="android:src">@drawable/ic_music_next</item>
	</style>
	<style name="MusicFfwdButtonStyle" parent="@android:style/MediaButton.Ffwd">
        <item name="android:src">@drawable/ic_media_ff</item>
    </style>
    <style name="MusicRewButtonStyle" parent="@android:style/MediaButton.Rew">
        <item name="android:src">@drawable/ic_media_rew</item>
    </style>
    <style name="MusicPauseButtonStyle" parent="@android:style/MediaButton.Pause">
        <item name="android:src">@drawable/ic_music_pause</item>
    </style>

    <style name="onyx_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:background">@drawable/imagebtn_bg</item>
        <item name="android:minHeight">@dimen/button_minHeight</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="button_bar_layout_style">
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/buttonbarbackground</item>
        <item name="android:paddingTop">@dimen/buttonbar_TextView_paddingTop</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:layout_marginLeft">-3dip</item>
        <item name="android:layout_marginRight">-3dip</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/home_tab_height</item>
    </style>

    <style name="button_bar_img_style">
        <item name="android:layout_width">@dimen/button_bar_img_size</item>
        <item name="android:layout_height">@dimen/button_bar_img_size</item>
    </style>

    <style name="button_bar_text_style">
        <item name="android:textAppearance">@style/MusicHomeTitleTextStyle</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>