<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:preferenceStyle">@style/OnyxKCB.Preference</item>
        <item name="android:checkBoxPreferenceStyle">@style/OnyxKCB.Preference.CheckBoxPreference</item>
        <item name="android:textColorSecondary">@color/primary_text_device_default_light</item>
        <item name="android:preferenceCategoryStyle">@style/OnyxKCB.Preference.Category</item>
        <item name="android:preferenceScreenStyle">@style/OnyxKCB.Preference.preferenceScreenStyle</item>
        <item name="android:dialogPreferenceStyle">@style/OnyxKCB.Preference.DialogPreference</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="OnyxKCB.Preference" parent="Preference.Material">
        <item name="android:layout">@layout/onyx_preference_material</item>
    </style>

    <style name="OnyxKCB.Preference.CheckBoxPreference">
        <item name="android:widgetLayout">@layout/preference_check_box</item>
    </style>

    <style name="OnyxKCB.Preference.Category" parent="Preference.Material">
        <item name="android:layout">@layout/onyx_preference_category_material</item>
    </style>

    <style name="OnyxKCB.Preference.preferenceScreenStyle"/>

    <style name="OnyxKCB.Preference.DialogPreference"/>
